# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://parcels:parcels_dev@localhost:5432/parcels_feasibility

# ============================================
# API CONFIGURATION
# ============================================
API_V1_PREFIX=/api/v1
PROJECT_NAME=Santa Monica Parcel Feasibility Engine
VERSION=1.0.0

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Debug Mode - Enables detailed logging and decision traces
API_DEBUG_MODE=false
LOG_LEVEL=INFO

# ============================================
# FEATURE FLAGS - STATE HOUSING LAWS
# ============================================
# Enable/disable specific state law analysis
ENABLE_AB2011=true
ENABLE_SB35=true
ENABLE_DENSITY_BONUS=true
ENABLE_SB9=true
ENABLE_AB2097=true

# ============================================
# GIS SERVICE ENDPOINTS
# ============================================
# Santa Monica GIS Services
SANTA_MONICA_PARCEL_SERVICE_URL=https://gis.smgov.net/arcgis/rest/services/PublicWorks/Parcels/MapServer
SANTA_MONICA_ZONING_SERVICE_URL=https://gis.smgov.net/arcgis/rest/services/Planning/Zoning/MapServer
SANTA_MONICA_OVERLAY_SERVICE_URL=https://gis.smgov.net/arcgis/rest/services/Planning/Overlays/MapServer
SANTA_MONICA_TRANSIT_SERVICE_URL=https://gis.smgov.net/arcgis/rest/services/Transportation/Transit/MapServer

# Regional GIS Services (SCAG, Metro)
SCAG_REGIONAL_SERVICE_URL=https://gisdata.scag.ca.gov/arcgis/rest/services
METRO_TRANSIT_SERVICE_URL=https://developer.metro.net/gis/

# GIS Service Configuration
GIS_REQUEST_TIMEOUT=30
GIS_MAX_RETRIES=3
GIS_CACHE_TTL=3600

# ============================================
# EXTERNAL SERVICES
# ============================================
# Geocoding Service (optional)
GEOCODING_API_KEY=
GEOCODING_PROVIDER=google

# LLM Narrative Service (optional)
OPENAI_API_KEY=
NARRATIVE_MODEL=gpt-4
ENABLE_NARRATIVE_GENERATION=false

# ============================================
# ANALYSIS DEFAULTS
# ============================================
DEFAULT_PARKING_SPACE_SIZE=320.0
DEFAULT_UNIT_SIZE=1000.0
MIN_OPEN_SPACE_PER_UNIT=100.0

# ============================================
# ENVIRONMENT & LOGGING
# ============================================
ENVIRONMENT=development
DEBUG=true
LOG_FORMAT=json

# ============================================
# SECURITY
# ============================================
# API Authentication (future)
API_KEY_ENABLED=false
API_KEY=

# Rate Limiting (requests per minute)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60
